<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/gameImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/gameImage"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/gameName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/gameImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/game_name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gameGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/gameName"
        app:layout_constraintStart_toEndOf="@id/gameImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/gameGenre"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/gamePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/gameGenre"
        app:layout_constraintStart_toEndOf="@id/gameImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/gamePrice"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/gamePlatforms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/gamePrice"
        app:layout_constraintStart_toEndOf="@id/gameImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/gamePlatforms"
        android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
